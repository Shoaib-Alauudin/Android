<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ghulam.miwok_app.MiwokActivity">

    <TextView
        android:id="@+id/numbers"
        style="@style/CategoryStyle"
        android:text="@string/numbers_textView"
        android:background="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/family_members"
        style="@style/CategoryStyle"
        android:text="@string/family_members_textView"
        android:background="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/colors"
        style="@style/CategoryStyle"
        android:text="@string/Colors_textView"
        android:background="@android:color/holo_purple" />

    <TextView
        android:id="@+id/phrases"
        style="@style/CategoryStyle"
        android:text="@string/phrases_textView"
        android:background="@android:color/holo_blue_bright" />

</LinearLayout>
